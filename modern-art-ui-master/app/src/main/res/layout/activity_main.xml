<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/palette"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:ignore="RtlHardcoded">

        <View
            android:id="@+id/view"
            android:layout_width="127dp"
            android:layout_height="326dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/view2"
            android:layout_toRightOf="@+id/view2"
            android:background="@color/dull_dark_gray"
            android:tag="@color/dull_dark_gray" />

        <View
            android:id="@+id/view3"
            android:layout_width="280dp"
            android:layout_height="235dp"
            android:layout_below="@+id/view2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="131dp"
            android:layout_toEndOf="@+id/view2"
            android:background="@color/dull_light_gray"
            android:tag="@color/dull_light_gray" />

        <View
            android:id="@+id/view4"
            android:layout_width="127dp"
            android:layout_height="374dp"
            android:layout_below="@+id/view3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="93dp"
            android:layout_toEndOf="@+id/view2"
            android:layout_toRightOf="@+id/view2"
            android:background="@color/dull_dark_blue"
            android:tag="@color/dull_dark_blue"
            tools:ignore="UnknownId" />

        <View
            android:layout_width="280dp"
            android:layout_height="303dp"
            android:layout_below="@+id/view3"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="163dp"
            android:layout_toEndOf="@+id/view4"
            android:layout_toRightOf="@+id/view4"
            android:background="@color/dull_green"
            android:tag="@color/dull_green" />
    </RelativeLayout>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>
